{
  "compilerOptions": {
    "target": "ES2020",                  // Set the JavaScript version output
    "module": "commonjs",                // Use CommonJS for module resolution
    "moduleResolution": "node",          // Use Node module resolution strategy
    "outDir": "./dist",                  // Output directory for compiled JavaScript
    "rootDir": "./src",                  // Root directory of the TypeScript source files
    "strict": true,                      // Enable all strict type-checking options
    "esModuleInterop": true,             // Enable compatibility with CommonJS modules
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are consistent
    "baseUrl": "./",                     // Base directory for resolving non-relative module names
    "paths": {
      "*": ["node_modules/*"]            // Paths to module resolution
    }
  },
  "include": ["src/**/*.ts"],            // Include all .ts files in the src directory
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist from being compiled
}
